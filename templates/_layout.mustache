<!DOCTYPE html>
<html lang="en-US">

<head>
  {{>head}}
</head>

<body id="fullsingle" class="page-template-page-fullsingle-split">

  <div class="fs-split">

    <!-- Image Side -->
    {{#image}}
      <div class="split-image" style="background-image: url({{image}})"></div>
    {{/image}}

    {{#video}}
      <div class="split-image split-video">
        <div class="video-wrap">
          <div class="video-container">
            <iframe class="video-content" src="https://player.vimeo.com/video/{{video}}?autoplay=1&loop=1&title=0&byline=0&portrait=0" frameborder="0" allowfullscreen></iframe>
          </div>
        </div>
      </div>
    {{/video}}

    <!-- Content Side -->
    <div class="split-content">

      {{>menu}}

      <div class="split-content-vertically-center">
      
        <div class="split-intro">
          
          <h1><a href="/">{{site-title}}</a></h1>

          <h2 class="tagline">{{title}}</h2>
          {{#subtitle}}<h3 class="tagline">{{subtitle}}</h3>{{/subtitle}}
        </div>

        <div class="split-bio">
          
          {{{body}}}
          <small>{{{credits}}}</small>

        </div>
        {{#links}}
        <div class="split-lists">
          
          <div class="split-list">

            <h3>Links</h3>

            <ul>
              {{#links}}<li><a href="{{href}}">{{content}}</a></li>{{/links}}
            </ul>

          </div>
        </div>
        {{/links}}
        {{>footer}}
      </div>

    </div>



  </div>

  </body>
</html>